@model RecruitmentManagementSystem.Models.JobCreationsModel
@{
    Layout = "AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Sign up</title>
</head>
<body>
    <div class="form-container">
        <h2>Create Job</h2>
        <form asp-action="CreateJob" asp-controller="Admin" method="post" enctype="multipart/form-data">

            <div>
                <label asp-for="JobTitle"></label>
                <input asp-for="JobTitle" required onfocusout="checkJobTitle()" />
                <span asp-validation-for="JobTitle"></span>
            </div>
            <div>
                <label asp-for="JobDescription"></label>
                <textarea asp-for="JobDescription" required onfocusout="checkJobDescription()"></textarea>
                <span asp-validation-for="JobDescription"></span>
            </div>
            <div>
                <label asp-for="RequiredSkills"></label>
                <textarea asp-for="RequiredSkills" required onfocusout="checkRequiredSkills()"></textarea>
                <span asp-validation-for="RequiredSkills"></span>
            </div>
            <div>
                <label asp-for="Experience"></label>
                <input asp-for="Experience" required onfocusout="checkExperience()" />
                <span asp-validation-for="Experience"></span>
            </div>
            <div>
                <label asp-for="SalaryRange"></label>
                <input asp-for="SalaryRange" required onfocusout="checkSalaryRange()" />
                <span asp-validation-for="SalaryRange"></span>
            </div>
            <div>
                <label asp-for="Deadline"></label>
                <input asp-for="Deadline" required type="date" onfocusout=" checkDeadline()" />
                <span asp-validation-for="Deadline"></span>
            </div>
            <div>
                <label asp-for="PosterPhoto"></label>
                <input asp-for="PosterPhoto" type="file" onfocusout="checkPosterPhoto()"  />
            </div>
            <div>
                <button type="submit">Create</button>
            </div>
        </form>
    </div>
</body>
</html>




