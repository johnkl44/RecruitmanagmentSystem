@model RecruitmentManagementSystem.Models.Users
@{
    Layout = "AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Sign up</title>
</head>
<body>
    <div class="form-container">
        <h2>Add admin user</h2>
        <form asp-action="AddAdminUser">
            <div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" required onfocusout="checkFirstName()" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" required onfocusout="checkLastName()" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" type="date" required />
                <span asp-validation-for="DateOfBirth"></span>
            </div>
            <div class="gender">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" type="radio" value="Male" required /> Male
                <input asp-for="Gender" type="radio" value="Female" required /> Female
                <input asp-for="Gender" type="radio" value="Other" required /> Other
                <span asp-validation-for="Gender"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" required onfocusout="checkPhoneNumber()" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" required onfocusout="checkEmail()" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Address"></label>
                <input asp-for="Address" required />
                <span asp-validation-for="Address"></span>
            </div>
            <div>
                <label asp-for="State"></label>
                <input asp-for="State" required />
                <span asp-validation-for="State"></span>
            </div>
            <div>
                <label asp-for="City"></label>
                <input asp-for="City" required />
                <span asp-validation-for="City"></span>
            </div>
            <div>
                <label asp-for="Username"></label>
                <input asp-for="Username" required />
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" required" onfocusout="checkPassword()" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" required onfocusout="checkConfirmPassword()" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div>
                <button type="submit">Add Admin</button>
            </div>
        </form>
    </div>
</body>
</html>

