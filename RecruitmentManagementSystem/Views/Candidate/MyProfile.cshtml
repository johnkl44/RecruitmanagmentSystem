@model RecruitmentManagementSystem.Models.Users

@{
    Layout = "CandidateLayout";
}
<div class="container mt-4">
    <div class="card mb-4 profile-card">
        <div class="card-header bg-primary text-white">
            Profile Information
        </div>
        <div class="card-body">
            <!-- Profile details -->
            <div class="profile-detail">
                <strong>First Name:</strong> @Html.DisplayFor(model => model.FirstName)
            </div>
            <div class="profile-detail">
                <strong>Last Name:</strong> @Html.DisplayFor(model => model.LastName)
            </div>
            <div class="profile-detail">
                <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")
            </div>
            <div class="profile-detail">
                <strong>Gender:</strong> @Html.DisplayFor(model => model.Gender)
            </div>
            <div class="profile-detail">
                <strong>Phone Number:</strong> @Html.DisplayFor(model => model.PhoneNumber)
            </div>
            <div class="profile-detail">
                <strong>Email:</strong> @Html.DisplayFor(model => model.Email)
            </div>
            <div class="profile-detail">
                <strong>Address:</strong> @Html.DisplayFor(model => model.Address)
            </div>
            <div class="profile-detail">
                <strong>State:</strong> @Html.DisplayFor(model => model.State)
            </div>
            <div class="profile-detail">
                <strong>City:</strong> @Html.DisplayFor(model => model.City)
            </div>
            <div class="profile-detail">
                <strong>Username:</strong> @Html.DisplayFor(model => model.Username)
            </div>
            <div class="text-center mt-3">
                <a asp-action="CandidateIndex" class="card-footer btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
